@model NewMovie
@{
    ViewData["Title"] = "Get To Know Joel";
}

<h1>Add Movies to the Database</h1>

<form method="post">
    <input type="hidden" asp-for="MovieID" />
    <br />
    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId">
        @foreach(Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <input type="text" required asp-for="Title" />
    <br />
    <label asp-for="Year">Year</label>
    <input type="number" required asp-for="Year" min="1888" />
    <br />
    <label asp-for="Director">Director</label>
    <input type="text" asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating for this movie</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent to</label>
    <input type="text" asp-for="LentTo" />
    <br />
    <label asp-for="Edited">Was this movie edited?</label>
    <select asp-for="Edited">
        <option value=1>Yes</option>
        <option value=0>No</option>
    </select>
    <br />
    <label asp-for="CopiedToPlex">Was this movie copied to plex?</label>
    <select asp-for="CopiedToPlex">
        <option value=1>Yes</option>
        <option value=2>No</option>
    </select>
    <br />
    <label asp-for="Notes">Notes</label>
    <input type="text" asp-for="Notes" maxlength="25"/>
    <br />
    <button type="submit">Add Movie</button>
</form>